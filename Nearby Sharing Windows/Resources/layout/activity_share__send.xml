<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sendingDataLayout"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/waitForAcceptanceView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_fluent_send_clock_24_regular"
        android:tint="?attr/colorOnSurfaceVariant" />

    <include
        layout="@layout/activity_share__send__progress"
        android:id="@+id/progressUILayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generic_cancel"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        style="@style/Widget.Material3.Button.TonalButton" />
</RelativeLayout>