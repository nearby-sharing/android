	xmlns:app="http://schemas.android.com/apk/res-auto">
	<PreferenceCategory
		android:key="general"
        android:title="@string/category_general">
		<Preference
            app:key="request_permissions"
            app:title="@string/request_permissions_title"
            app:summary="@string/request_permissions_summary" />
		<Preference
            app:key="open_sponsor"
            app:title="@string/open_sponsor_title"
            app:summary="@string/open_sponsor_summary" />
		<Preference
            app:key="open_faq"
            app:title="@string/open_faq_title"
            app:summary="@string/open_faq_summary" />		
	</PreferenceCategory>
	<PreferenceCategory
		android:key="device_info"
        android:title="@string/category_device_info">
